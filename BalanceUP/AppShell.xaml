<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:BalanceUP.Pages"
       x:Class="BalanceUP.AppShell"
       Title="BalanceUP!">

    <!-- Bottom navigation Tabs) -->
    <TabBar>
        <Tab Title="Home" Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>
        <Tab Title="Set Budget" Icon="budget.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:SetBudgetPage}" />
        </Tab>
        <Tab Title="Add Expense" Icon="add.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:AddExpensePage}" />
        </Tab>
        <Tab Title="Chart" Icon="chart.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:ChartPage}" />
        </Tab>
        <Tab Title="Profile" Icon="profile.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>