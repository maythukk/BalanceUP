<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BalanceUP.Pages.HomePage"
             Title="Home">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <!-- Budget and Expenses Containers -->
            <Grid ColumnSpacing="17" HeightRequest="130" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Budget Container -->
                <Frame Grid.Column="0" 
                       CornerRadius="10" 
                       BorderColor="#FFFDDD" 
                       BackgroundColor="#FFFDD0" 
                       Padding="15">
                    <Grid>
                        <StackLayout Spacing="10">
                            <Label Text="Monthly Budget" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="DarkGray" />
                            <Label x:Name="lblBudgetAmount" 
                                   Text="$0" 
                                   FontSize="24" 
                                   TextColor="Black" />
                            <!-- Budget Progress Indicator -->
                            <Frame HeightRequest="10" Padding="0" 
                                   BackgroundColor="#E0E0E0" 
                                   CornerRadius="5" 
                                   HasShadow="False"
                                   BorderColor="Transparent">
                                <Frame x:Name="budgetProgressBar" 
                                       HorizontalOptions="Start"
                                       WidthRequest="0"
                                       Padding="0" 
                                       BackgroundColor="#4CAF50" 
                                       CornerRadius="5"
                                       HasShadow="False"
                                       BorderColor="Transparent" />
                            </Frame>
                            <Label x:Name="lblBudgetStatus"
                                   Text=""
                                   FontSize="12"
                                   TextColor="DarkGray"
                                   HorizontalOptions="End" />
                        </StackLayout>
                    </Grid>
                </Frame>
                <!-- Expenses Container -->
                <Frame Grid.Column="1" 
                       CornerRadius="10" 
                       BorderColor="#FFFDDD" 
                       BackgroundColor="#FFFDD0" 
                       Padding="15">
                    <StackLayout Spacing="10">
                        <Label Text="Expenses So Far" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="DarkGray" />
                        <Label x:Name="lblExpensesAmount" 
                               Text="$0" 
                               FontSize="24" 
                               TextColor="Black" />
                    </StackLayout>
                </Frame>
            </Grid>
            <!-- Spending List -->
            <Label Text="Your Spendings" 
                   FontSize="14" 
                   FontAttributes="Bold" />
            <Frame CornerRadius="10" 
                   BorderColor="LightGray" 
                   BackgroundColor="White" 
                   Padding="3">
                <Grid>
                    <CollectionView x:Name="listViewTodaySpendings"
                                   IsGrouped="True">
                        <CollectionView.GroupHeaderTemplate>
                            <DataTemplate>
                                <Label Text="{Binding Date, StringFormat='{0:MMMM d, yyyy}'}" 
                                       FontAttributes="Bold" 
                                       FontSize="15" 
                                       TextColor="gray"
                                       Padding="10" />
                            </DataTemplate>
                        </CollectionView.GroupHeaderTemplate>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <SwipeView SwipeStarted="OnSwipeStarted">
                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Delete"
                                                       BackgroundColor="Red"
                                                       IconImageSource="delete_icon"
                                                       Invoked="OnDeleteSwipeItemInvoked"/>
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="{Binding Category}" FontSize="18" />
                                        <Label Grid.Column="1" Text="{Binding Amount, StringFormat='{0:C}'}" FontSize="18" />
                                    </Grid>
                                </SwipeView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Label x:Name="lblNoSpendingsToday" 
                           Text="No spendings yet" 
                           IsVisible="True" Opacity="0.5" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Grid>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>