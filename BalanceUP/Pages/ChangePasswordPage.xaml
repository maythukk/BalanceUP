<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BalanceUP.Pages.ChangePasswordPage"
             Title="Change Password">
    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <StackLayout Padding="20" Spacing="20" HorizontalOptions="Center">
            <Label Text="Current Password" />
            <Entry x:Name="CurrentPasswordEntry" IsPassword="True" WidthRequest="300" />

            <Label Text="New Password" />
            <Entry x:Name="NewPasswordEntry" IsPassword="True" WidthRequest="300" />

            <Label Text="Confirm New Password" />
            <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" WidthRequest="300" />

            <!-- Space -->
            <BoxView HeightRequest="10" BackgroundColor="Transparent"/>
            
            <Button Text="Change Password" 
                     WidthRequest="150"
                     BackgroundColor="#89CFF0" 
                     TextColor="White"
                     Clicked="OnChangePasswordClicked" />
        </StackLayout>
    </Grid>
</ContentPage>