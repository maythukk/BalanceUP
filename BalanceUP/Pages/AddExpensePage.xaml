<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BalanceUP.Pages.AddExpensePage"
             Title="Add Expense">
    <!-- container -->
    <Grid VerticalOptions="Center" 
          HorizontalOptions="FillAndExpand" 
          Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Title -->
            <RowDefinition Height="20" />
            <!-- Space -->
            <RowDefinition Height="Auto" />
            <!-- Amount -->
            <RowDefinition Height="20" />
            <!-- Space -->
            <RowDefinition Height="Auto" />
            <!-- Choose Category -->
            <RowDefinition Height="20" />
            <!-- Space -->
            <RowDefinition Height="Auto" />
            <!-- Date Picker -->
            <RowDefinition Height="20" />
            <!-- Space -->
            <RowDefinition Height="Auto" />
            <!-- Notes -->
            <RowDefinition Height="20" />
            <!-- Space -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <!-- Title -->
        <Label Text="New Expense" 
               FontSize="24" 
               FontAttributes="Bold" 
               Grid.Row="0" 
               HorizontalOptions="Center" 
               Margin="0,0,0,10" />
        <!-- Amount -->
        <Frame BorderColor="Gray" 
               CornerRadius="10" 
               WidthRequest="250" 
               Padding="5" 
               Grid.Row="2" 
               HorizontalOptions="Center">
            <Entry x:Name="entryAmount" 
                   Placeholder="Enter amount" 
                   Keyboard="Numeric" 
                   BackgroundColor="White" />
        </Frame>
        <!-- Choose Category -->
        <Frame BorderColor="Gray" 
               CornerRadius="10" 
               Padding="5" 
               Grid.Row="4" 
               WidthRequest="250" 
               HorizontalOptions="Center">
            <Picker x:Name="pickerCategory" 
                    Title="Select Category" 
                    BackgroundColor="White">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Food</x:String>
                        <x:String>Shopping</x:String>
                        <x:String>Bills</x:String>
                        <x:String>Entertainment</x:String>
                        <x:String>Transportation</x:String>
                        <x:String>Others</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </Frame>

        <!-- Date Picker -->
        <Frame BorderColor="Gray" 
               CornerRadius="10" 
               Padding="5" 
               Grid.Row="6" 
               WidthRequest="250" 
               HorizontalOptions="Center">
            <DatePicker x:Name="datePicker" 
                       Format="D"
                       BackgroundColor="White" />
        </Frame>

        <!-- Buttons -->
        <StackLayout Orientation="Horizontal" 
                     Grid.Row="10" 
                     HorizontalOptions="Center" 
                     Spacing="20" 
                     Margin="0,20">
            <Button Text="Save" 
                    BackgroundColor="#89CFF0" 
                    TextColor="White" 
                    Clicked="OnSaveClicked" />
            <Button Text="Clear" 
                    BackgroundColor="LightGray" 
                    TextColor="Black" 
                    Clicked="OnClearClicked" />
        </StackLayout>
    </Grid>
</ContentPage>