<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="BalanceUP.Pages.ChartPage"
             Title="Chart Page">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <!-- Month Navigation -->
            <HorizontalStackLayout HorizontalOptions="Center" 
                                   VerticalOptions="Start">
                <Button x:Name="btnPrevious" 
                        Text="&#x25C0;" 
                        BackgroundColor="Transparent" 
                        TextColor="Black" 
                        Clicked="OnPreviousMonthClicked" />
                <Label x:Name="lblCurrentMonth" 
                       Text="January 2023" FontSize="24" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
                <Button x:Name="btnNext" 
                        Text="&#x25B6;" 
                        BackgroundColor="Transparent" 
                        TextColor="Black" 
                        Clicked="OnNextMonthClicked" />
            </HorizontalStackLayout>

            <!-- Pie Chart -->
            <charts:ChartView x:Name="chartView" 
                              HeightRequest="250" 
                              Margin="0,20,0,0" />

            <!-- Category Details -->
            <Frame BorderColor="Transparent" Padding="10" Margin="0,10,0,10">
                <VerticalStackLayout x:Name="categoryDetailsLayout" Spacing="8" />
            </Frame>

            <!-- Total Spendings -->
            <Label x:Name="lblTotalSpendings" Text="Total Spendings: $0" 
                   FontSize="18" FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" 
                   Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>